<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Display for Input and Result -->
    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="0"
        android:textSize="28sp"
        android:gravity="end"
        android:background="#DDDDDD"
        android:textColor="#000000" />

    <!-- Grid Layout for Buttons -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/resultTextView"
        android:layout_margin="10dp"
        android:columnCount="4">

        <!-- Row 1 -->
        <Button android:id="@+id/buttonHistory" android:layout_row="0" android:layout_column="0" android:text="H" />
        <Button android:id="@+id/buttonOpenBracket" android:layout_row="0" android:layout_column="1" android:text="(" />
        <Button android:id="@+id/buttonCloseBracket" android:layout_row="0" android:layout_column="2" android:text=")" />
        <Button android:id="@+id/buttonDivide" android:layout_row="0" android:layout_column="3" android:text="/" />

        <!-- Row 2 -->
        <Button android:id="@+id/button7" android:layout_row="1" android:layout_column="0" android:text="7" />
        <Button android:id="@+id/button8" android:layout_row="1" android:layout_column="1" android:text="8" />
        <Button android:id="@+id/button9" android:layout_row="1" android:layout_column="2" android:text="9" />
        <Button android:id="@+id/buttonMultiply" android:layout_row="1" android:layout_column="3" android:text="X" />

        <!-- Row 3 -->
        <Button android:id="@+id/button4" android:layout_row="2" android:layout_column="0" android:text="4" />
        <Button android:id="@+id/button5" android:layout_row="2" android:layout_column="1" android:text="5" />
        <Button android:id="@+id/button6" android:layout_row="2" android:layout_column="2" android:text="6" />
        <Button android:id="@+id/buttonMinus" android:layout_row="2" android:layout_column="3" android:text="-" />

        <!-- Row 4 -->
        <Button android:id="@+id/button1" android:layout_row="3" android:layout_column="0" android:text="1" />
        <Button android:id="@+id/button2" android:layout_row="3" android:layout_column="1" android:text="2" />
        <Button android:id="@+id/button3" android:layout_row="3" android:layout_column="2" android:text="3" />
        <Button android:id="@+id/buttonPlus" android:layout_row="3" android:layout_column="3" android:text="+" />

        <!-- Row 5 -->
        <Button android:id="@+id/button0" android:layout_row="4" android:layout_column="0" android:text="0" />
        <Button android:id="@+id/buttonBackspace" android:layout_row="4" android:layout_column="1" android:text="←" />
        <Button android:id="@+id/buttonEquals" android:layout_row="4" android:layout_column="2" android:text="=" />
        <Button android:id="@+id/buttonClear" android:layout_row="4" android:layout_column="3" android:text="C"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF" />
    </GridLayout>
</RelativeLayout>
